<!DOCTYPE html>
<html>
<head>
    <title>AJAX JSON Table</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body { font-family: Arial; padding:20px; }
        table { border-collapse: collapse; width:100%; margin-top:15px;}
        th, td { border:1px solid #ccc; padding:8px; text-align:left; }
        th { cursor:pointer; background:#f2f2f2; }
        .arrow { font-size:12px; margin-left:5px; }
        .top-bar { display:flex; gap:10px; flex-wrap:wrap; }
        input { padding:5px; }
        button { padding:6px 10px; cursor:pointer; }
    </style>
</head>
<body>

<h2>Data Rendering using AJAX + JSON</h2>

<div class="top-bar">
    <input type="text" id="search" placeholder="Global Search">
    <input type="date" id="startDate">
    <input type="date" id="endDate">
    <button id="dateFilter">Submit</button>
</div>

<table>
    <thead>
        <tr>
            <th data-column="id">ID <span class="arrow"></span></th>
            <th data-column="name">Name <span class="arrow"></span></th>
            <th data-column="email">Email <span class="arrow"></span></th>
            <th data-column="phone">Phone <span class="arrow"></span></th>
            <th data-column="date">Date <span class="arrow"></span></th>
        </tr>
    </thead>
    <tbody id="tableBody"></tbody>
</table>

<script>
let tableData = [];
let sortOrder = {};
let originalData = [];

$(document).ready(function(){

    // AJAX Load JSON
    $.ajax({
        url: "data.json",
        method: "GET",
        dataType: "json",
        success: function(data){
            tableData = data;
            originalData = data;
            renderTable(data);
        }
    });

    // Render Function
    function renderTable(data){
        let rows = "";
        $.each(data, function(index, item){
            rows += `<tr>
                        <td>${item.id}</td>
                        <td>${item.name}</td>
                        <td>${item.email}</td>
                        <td>${item.phone}</td>
                        <td>${item.date}</td>
                    </tr>`;
        });
        $("#tableBody").html(rows);
    }

    // Global Search
    $("#search").on("keyup", function(){
        let value = $(this).val().toLowerCase();
        let filtered = originalData.filter(item =>
            Object.values(item).some(val =>
                String(val).toLowerCase().includes(value)
            )
        );
        tableData = filtered;
        renderTable(filtered);
    });

    // Date Filter
    $("#dateFilter").click(function(){
        let start = $("#startDate").val();
        let end = $("#endDate").val();

        let filtered = originalData.filter(item => {
            if(start && item.date < start) return false;
            if(end && item.date > end) return false;
            return true;
        });

        tableData = filtered;
        renderTable(filtered);
    });

    // Column Sorting
    $("th").click(function(){
        let column = $(this).data("column");

        sortOrder[column] = !sortOrder[column];

        tableData.sort(function(a,b){
            if(a[column] < b[column]) return sortOrder[column] ? -1 : 1;
            if(a[column] > b[column]) return sortOrder[column] ? 1 : -1;
            return 0;
        });

        $(".arrow").html("");
        $(this).find(".arrow").html(sortOrder[column] ? "▲" : "▼");

        renderTable(tableData);
    });

});
</script>

</body>
</html>


















