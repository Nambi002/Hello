<?php
session_start();
include "alias.php";

if(!isset($_SESSION['user_data'])) {
    $_SESSION['user_data'] = [
        "name"  => "Test1",
        "mobile" => "8220547549"
    ];
}

$data = $_SESSION['user_data'];
$finalData = applyAlias($data);
?>

<h2>Page 1 - Profile</h2>

<?php foreach($finalData as $col => $val){ ?>
    <p><strong><?php echo $col; ?> :</strong> <?php echo $val; ?></p>
<?php } ?>

<br>
<a href="view.php">Back to Admin</a>


