edit_a;lias.php

<?php
include "alias.php";

if(isset($_POST['update'])) {

    $existing = getColumnAlias();

    $existing["name"] = $_POST['name_alias'];

    updateColumnAlias($existing);

    header("Location: view.php");
}
?>


