edit alis
php
<?php
include "alias.php";

if(isset($_POST['update'])) {

    $newAlias = [
        "fname"  => $_POST['fname_alias'],
        "mobile" => $_POST['mobile_alias']
    ];

    updateColumnAlias($newAlias);

    header("Location: view.php");
}
?>

<h2>Edit Column Names</h2>

<form method="post">
    Fname Alias: <input type="text" name="fname_alias"><br><br>
    Mobile Alias: <input type="text" name="mobile_alias"><br><br>

    <button type="submit" name="update">Update</button>
</form>



edit data 



<?php
include "alias.php";

if(isset($_POST['update'])) {

    $dataAlias = getDataAlias();

    $column = $_POST['column'];
    $oldVal = $_POST['old_value'];
    $newVal = $_POST['new_value'];

    $dataAlias[$column][$oldVal] = $newVal;

    updateDataAlias($dataAlias);

    header("Location: view.php");
}
?>

<h2>Edit Column Value</h2>

<form method="post">
    Column:
    <select name="column">
        <option value="fname">fname</option>
        <option value="mobile">mobile</option>
    </select><br><br>

    Old Value: <input type="text" name="old_value"><br><br>
    New Value: <input type="text" name="new_value"><br><br>

    <button type="submit" name="update">Update</button>
</form>


